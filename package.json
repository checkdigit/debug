{
  "name": "@checkdigit/debug",
  "version": "0.0.2",
  "description": "This library is designed to replace serve-runtime for Check Digit runtime support of Node-based web services.",
  "typings": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "prettier": "@checkdigit/prettier-config",
  "engines": {
    "node": ">=14.15.3",
    "npm": ">=6.14.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkdigit/debug.git"
  },
  "author": "Check Digit, LLC",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/checkdigit/debug/issues"
  },
  "homepage": "https://github.com/checkdigit/debug#readme",
  "dependencies": {},
  "devDependencies": {
    "@checkdigit/eslint-config": "3.4.2",
    "@checkdigit/prettier-config": "^1.0.2",
    "@checkdigit/publish": "^1.0.18",
    "@checkdigit/typescript-config": "^1.0.5",
    "@koa/router": "^10.0.0",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.22",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.24.0",
    "jest": "^26.6.3",
    "koa": "^2.13.1",
    "portfinder": "^1.0.28",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest",
    "setupFiles": [
      "<rootDir>/node_modules/dotenv/config.js"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true,
        "diagnostics": false
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ]
  },
  "scripts": {
    "prepublishOnly": "publish",
    "postpublish": "rimraf dist .npmignore",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "clean": "rimraf node_modules package-lock.json build coverage",
    "lint": "eslint -f unix 'src/**/*.ts'",
    "lint:fix": "eslint -f unix 'src/**/*.ts' --fix",
    "prettier": "prettier --list-different 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "test": "tsc --noEmit && jest && npm run lint && npm run prettier"
  }
}
